@using Microsoft.Extensions.Localization;
@using BussinesEmployee.Resource.Account.Account_ForgetPassword
@inject IStringLocalizer<SharedResource> sharedResource
@{
    Layout = null;
    var cutlure = Thread.CurrentThread.CurrentCulture.Name;
}
@model  BussinesEmployee.Models.ForgetPasswordVM
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@sharedResource["ForgotPassword"]</title>
    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fp-page">
    
    <div class="fp-box">
        <div class="logo">
         
        </div>
        <div class="card">
            <div class="header">
                @if (cutlure == "ar-EG")
                {
                    <a asp-action="ForgetPassword" asp-action="ForgetPassword" asp-route-culture="en-US" >@sharedResource["English"]</a>
                }
                else if (cutlure == "en-US")
                {
                    <a asp-action="ForgetPassword" asp-action="ForgetPassword" asp-route-culture="ar-EG">@sharedResource["Arabic"]</a>
                }
            </div>
            <div class="body">
                <form asp-action="ForgetPassword" asp-controller="Account" method="POST">
                    <div class="msg">
                        @sharedResource["Msg"]
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" asp-for="Email" placeholder="@sharedResource["Email"]">
                        </div>
                        <div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <input class=" btn btn-block btn-lg bg-pink waves-effect" type="submit" value="@sharedResource["ResetPassword"]" />

                    <div class="row m-t-20 m-b--5 align-center">
                        <a asp-action="Login" asp-controller="Account">@sharedResource["SignIn"]!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Custom Js -->
    <script src="~/js/admin.js"></script>
    <script src="~/js/pages/examples/forgot-password.js"></script>
</body>

</html>