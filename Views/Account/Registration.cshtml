@using Microsoft.Extensions.Localization
@using BussinesEmployee.Resource.Account.Account_Registration
@inject IStringLocalizer<SharedResource> sharedResource
@{
    Layout = null;
    var culture = Thread.CurrentThread.CurrentCulture.Name;
}
@model BussinesEmployee.Models.RegistrationVM
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@sharedResource["SignUp"]</title>
    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="signup-page">



    <div class="signup-box">
       
        <div class="card">
            <div class="header">
                @if (culture == "ar-EG")
                {
                    <a asp-action="Registration" asp-controller="Account" asp-route-culture="en-US">@sharedResource["English"]</a>
                }
                else if (culture == "en-US")
                {
                    <a asp-action="Registration" asp-controller="Account" asp-route-culture="ar-EG">@sharedResource["Arabic"]</a>
                }
            </div>
            <div class="body">
                <form method="POST" asp-action="Registration" asp-controller="Account">
                    <div class="msg">@sharedResource["RegisterNwMembership"]</div>
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                    @*  <div class="input-group">
                    <span class="input-group-addon">
                    <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Name Surname" required autofocus>
                    <div> <span class="text-danger" asp-validation-for="UserName"></span></div>
                    </div>
                    </div>*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            <input type="email" class="form-control" asp-for="Email" placeholder="@sharedResource["EmailAddress"]">
                            <div> <span class="text-danger" asp-validation-for="Email"></span></div>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" asp-for="Password" placeholder="@sharedResource["Password"]">
                            <div>  <span class="text-danger" asp-validation-for="Password"></span></div>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="@sharedResource["ConfirmPassword"]">
                            <div> <span class="text-danger" asp-validation-for="ConfirmPassword"></span></div>
                        </div>
                    </div>



                    <input type="submit" value="@sharedResource["SignUp"]" class="btn btn-block btn-lg bg-pink waves-effect" />

                    <div class="m-t-25 m-b--5 align-center">
                        <a asp-action="Login" asp-controller="Account">@sharedResource["HaveMembership"] ? </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Jquery Core Js -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!-- Custom Js -->
    <script src="~/js/admin.js"></script>
    <script src="~/js/pages/examples/sign-up.js"></script>
</body>

</html>