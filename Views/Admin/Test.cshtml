@model BussinesEmployee.Models.SelectUsersForRole;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
</head>
<body>



    <form asp-action="EditUsersInRole" asp-controller="Admin" method="post">
        <div class="card">
            <div class="header">
                <h4>Role Name</h4>
                <input type="text" disabled readonly value="@Model.RoleName" class="form-control" />
            </div>
        </div>



        <div class="card">
            <div class="header">
                Users
            </div>
            <div class="body">
                @for (int i = 0; i < Model.Checkboxes.Count; i++)
                {

                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Checkboxes[i].Id" />
                        <input type="hidden" asp-for="@Model.Checkboxes[i].DisplayName" />
                        <input asp-for="@Model.Checkboxes[i].IsSelected" class="form-check-input filled-in chk-col-pink" />
                        <label asp-for="@Model.Checkboxes[i].DisplayName" class="form-check-label filled-in chk-col-pink">
                            @Model.Checkboxes[i].DisplayName
                        </label>
                    </div>

                }


            </div>
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Update" class="btn btnn-primary" />
        </div>


    </form>

</body>
</html>
