@model BussinesEmployee.Models.DepartmentVM
@{
    ViewBag.title = "Edit Department";

}

<h2>Edit Department</h2>


<form asp-action="Edit" asp-controller="Department" method="post" class="form-group">
    <div class="card">
        <div class="header">
            Edit Department
        </div>
        <div class="body">

            <div class="form-group">
                <div class="form-line">
                    <label asp-for="DepartmentName">Department Name</label>
                    <input type="text" asp-for="DepartmentName" class="form-control" />
                    <span class="text-danger" asp-validation-for="DepartmentName"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="form-line">
                    <label asp-for="DepartmentCode">Department Code</label>
                    <input type="text" asp-for="DepartmentCode" class="form-control" />
                    <span class="text-danger" asp-validation-for="DepartmentCode"></span>
                </div>
            </div>

            <div class=" row">

                <input type="hidden" asp-for="DepartmentId" />
                <input type="submit" value="save" class=" btn btn-primary" />
                <a asp-controller="Department" asp-action="Index" class="btn btn-danger ">Cancel</a>
            </div>
        </div>
    </div>






</form>
<script src="~/jquery/jquery.min.js"></script>

<script src="~/jquery-validate/jquery.validate.min.js"></script>

<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>